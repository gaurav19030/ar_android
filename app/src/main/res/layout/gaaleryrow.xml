<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:background="@drawable/hometext"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="150dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/gridiv"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:transitionName="myImage"
                android:layout_width="350dp"
                android:layout_height="350dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <com.procialize.ingenratytour.CustomFonts.SiemensRegularTextview
                android:id="@+id/nameTv"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/textsizenormal"
                android:gravity="center"
                android:textColor="@color/colorwhite"
                android:text="Image"
                android:paddingLeft="10dp"
                android:background="#41AAAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_above="@+id/nameTv"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>